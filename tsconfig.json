{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "ESNext",
        "rootDir": "scripts",
        "outDir": "dist",
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "pretty": true,
        "alwaysStrict": true,
        "strictNullChecks": true,
        "newLine": "LF",
        "resolveJsonModule": true,
        "lib": [
            "ES2017"
        ]
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "scripts/**/*.json",
        "scripts/**/*.ts"
    ]
}