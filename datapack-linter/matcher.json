{
    "problemMatcher": [
        {
            "owner": "datapack-linter",
            "pattern": [
                {
                    "regexp": "^::error::\\S+\\s\\((.+)\\)$",
                    "file": 1
                },
                {
                    "regexp": "^::(?:error|warning)::\\s+(\\d+):(\\d+)\\s+(Error|Warning)\\s+(.*)$",
                    "line": 1,
                    "column": 2,
                    "severity": 3,
                    "message": 4,
                    "loop": true
                }
            ]
        }
    ]
}